{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!{README,readme}.md", "!**/*.test.*", "!**/*.spec.*"],
      "outputs": ["build/**", "dist/**", ".next/**", "!.next/cache/**", "src/schema/generated/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.*", "**/*.spec.*"]
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "!{README,readme}.md"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!{README,readme}.md"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
