{
  "name": "@repo/worker-autoscaler",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test:up": "docker compose -f docker-compose.test.yml up -d --wait",
    "test:down": "docker compose -f docker-compose.test.yml down -v",
    "test:run": "tsx src/test-harness.ts",
    "test": "yarn test:up && yarn test:run; yarn test:down"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "ioredis": "^5.3.2",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/pg": "^8.11.6",
    "pg": "^8.13.1",
    "typescript": "^5.7.2"
  },
  "packageManager": "yarn@4.12.0"
}
