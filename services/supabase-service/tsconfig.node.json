{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist/scripts",
    "jsx": "react",
    "esModuleInterop": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "./scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
