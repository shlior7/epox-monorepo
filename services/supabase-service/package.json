{
  "name": "@scenergy/supabase-service",
  "version": "1.0.0",
  "private": true,
  "description": "Supabase database service and CLI tools for Scenergy",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "supabase": "supabase",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:diff": "supabase db diff",
    "db:push": "supabase db push --linked",
    "db:pull": "supabase db pull --linked",
    "db:setup": "supabase init && supabase start",
    "db:seed": "supabase db seed",
    "db:test": "supabase test db",
    "db:status": "supabase migration list --linked",
    "db:link": "supabase link",
    "db:generate:types": "supabase gen types typescript --linked > src/lib/supabase-types.ts",
    "db:migrate": "supabase migration new",
    "db:migrate:repair": "supabase migration repair --status reverted 20250724234856",
    "db:migrate:repair:applied": "supabase migration repair --status applied 20250725003049",
    "login": "supabase login",
    "init": "supabase init",
    "setup:functions": "yarn supabase db push --linked",
    "verify": "yarn supabase db query --file ./verify_setup.sql --linked",
    "deploy": "./src/scripts/deploy.sh",
    "deploy:quick": "supabase db push --linked"
  },
  "devDependencies": {
    "supabase": "2.64.0"
  },
  "packageManager": "yarn@4.9.2",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "dotenv": "^17.2.1"
  }
}
