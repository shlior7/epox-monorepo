{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2022"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "esnext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "target": "es2022",
        "allowJs": true,
        "jsx": "preserve",
        "baseUrl": "./",
        "noEmit": true,
        "incremental": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/lib/*": [
                "src/lib/*"
            ],
            "@/types": [
                "src/types"
            ],
            "@/*": [
                "src/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ]
        },
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*",
        "setup-clients-table.ts",
        "vitest.config.ts",
        "next-env.d.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
