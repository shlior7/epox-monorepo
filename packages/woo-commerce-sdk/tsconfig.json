{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Changed to ESNext for modern module system
    "lib": [
      "ES2022",
      "DOM"
    ], // Added DOM for frontend compatibility
    "declaration": true, // Generates .d.ts files
    "declarationMap": true, // Generates sourcemaps for .d.ts
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // Added for proper module resolution
    "isolatedModules": true, // Better for tree-shaking
    "sourceMap": true, // For debugging
    "rootDir": "src", // Specify source location
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
