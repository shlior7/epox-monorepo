{
  "name": "visualizer-db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./errors": "./src/errors.ts",
    "./schema": "./src/schema/index.ts",
    "./types": "./src/schema/generated/db-types.generated.ts",
    "./repositories": "./src/repositories/index.ts",
    "./repositories/generation-jobs": "./src/repositories/generation-jobs.ts",
    "./utils/prompt-resolver": "./src/utils/prompt-resolver.ts",
    "./testkit": "./src/testkit.ts",
    "./testkit/test-client": "./src/__tests__/test-client.ts",
    "./testkit/helpers": "./src/__tests__/helpers.ts"
  },
  "scripts": {
    "build": "yarn db:generate:types",
    "dev:db:start": "docker compose up -d",
    "dev:db:stop": "docker compose down",
    "dev:db:reset": "docker compose down -v && docker compose up -d",
    "dev:db:logs": "docker compose logs -f postgres",
    "db:push:dev": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/epox_dev drizzle-kit push --force",
    "db:push:prod": "dotenv -e .env.production -- sh -c 'ALLOW_PRODUCTION_ACCESS=true drizzle-kit push'",
    "db:push:test": "DATABASE_URL=postgresql://test:test@localhost:5434/visualizer_test drizzle-kit push --force",
    "db:push:all": "yarn db:push:dev && yarn db:push:test && yarn db:push:prod",
    "db:studio:dev": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/epox_dev drizzle-kit studio",
    "db:studio:prod": "dotenv -e .env.production -- sh -c 'ALLOW_PRODUCTION_ACCESS=true drizzle-kit studio'",
    "db:studio:test": " DATABASE_URL=postgresql://test:test@localhost:5434/visualizer_test drizzle-kit studio",
    "db:generate:types": "tsx scripts/generate-db-interfaces.ts",
    "db:generate:test-schema": "dotenv -e .env.local -- sh -c 'ALLOW_PRODUCTION_ACCESS=true drizzle-kit generate && cp drizzle/*.sql sql-tests/schema.sql && sed -i \\'\\'\\' s/--> statement-breakpoint//g sql-tests/schema.sql && rm -rf drizzle && echo Generated sql-tests/schema.sql'",
    "db:seed:admin": "tsx scripts/create-default-admin.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:db:start": "docker compose -f docker-compose.test.yml up -d",
    "test:db:stop": "docker compose -f docker-compose.test.yml down",
    "test:db:reset": "docker compose -f docker-compose.test.yml down -v && docker compose -f docker-compose.test.yml up -d"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "bcrypt": "^6.0.0",
    "drizzle-orm": "^0.38.3",
    "pg": "^8.13.1",
    "uuid": "^13.0.0",
    "visualizer-types": "1.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
