{
  "name": "visualizer-db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./errors": "./src/errors.ts",
    "./schema": "./src/schema/index.ts",
    "./types": "./src/schema/generated/db-types.generated.ts",
    "./repositories": "./src/repositories/index.ts",
    "./repositories/generation-jobs": "./src/repositories/generation-jobs.ts",
    "./utils/prompt-resolver": "./src/utils/prompt-resolver.ts",
    "./testkit": "./src/testkit.ts"
  },
  "scripts": {
    "build": "npm run db:generate:types",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate:types": "tsx scripts/generate-db-interfaces.ts",
    "db:generate:test-schema": "drizzle-kit generate && cp drizzle/*.sql sql-tests/schema.sql && sed -i '' 's/--> statement-breakpoint//g' sql-tests/schema.sql && rm -rf drizzle && echo 'Generated sql-tests/schema.sql'",
    "db:seed:admin": "tsx scripts/create-default-admin.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "bcrypt": "^6.0.0",
    "drizzle-orm": "^0.38.3",
    "uuid": "^13.0.0",
    "visualizer-types": "1.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.30.1",
    "pg": "^8.13.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
